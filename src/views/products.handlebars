  <table id="productsTable">
    <thead>
      <tr class="descriptionColumn">
        <th><strong>Producto</strong></th>
        <th><strong>Descripción</strong></th>
        <th><strong>Código</strong></th>
        <th><strong>Precio</strong></th>
        <th><strong>Stock</strong></th>
        <th><strong>Categoría</strong></th>
        <th><strong>Miniatura</strong></th>
        <th><strong>Detalles</strong></th>
        <th><strong>Seleccionar</strong></th>
      </tr>
    </thead>
    <tbody>
      {{#each products.docs}}
        <tr>
          <form {{this._id}}>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.code}}</td>
            <td>{{this.price}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.category}}</td>
            <td>
              <img
                src="{{this.thumbnail}}"
                alt="Thumbnail"
                width="150"
                height="150"
              />
            </td>
            
            <td class="productDetail"><a href="/products/{{this._id}}"> Ver Producto</a></td>
            <td class="productAdd"><input type="submit" value="Agregar al Carrito" /></td>
          </form>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <div>
    {{#if products.hasPrevPage}}
      <a class="buttonHasPage" href="{{products.prevLink}}">Anterior</a>
    {{/if}}
    {{#if products.hasNextPage}}
      <a class="buttonHasPage" href="{{products.nextLink}}">Siguiente</a>
    {{/if}}
  </div>
</div>